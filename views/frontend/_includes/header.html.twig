<header class="header scrolling sticky" itemscope itemtype="http://schema.org/Organization">
    <div class="container">
        {# TODO :  replace the text-logo by a image-logo #}
        <h3 class="logo">
            <a href="{{ path_for('home') }}">
                <strong itemprop="logo" class="text-uppercase">Devscast</strong>
            </a>
        </h3>

        <nav class="navigation">
            <ul class="menu">
                {% if currentUser and currentUser.role == '1' %}
                    <li class="menuitem">
                        <a href="{{ path_for('admin.index') }}">Admin</a>
                    </li>
                {% endif %}

                {# TODO : Set up a strategy to make links active, cleanly!! :) #}
                <li class="menuitem {{ is_current_path('podcasts.index') or is_current_path('podcasts.show', {id: podcast.id, slug: podcast.slug}) ? 'active' : '' }}">
                    <a href="{{ path_for('podcasts.index') }}">Podcasts</a>
                </li>
                <li class="menuitem {{ is_current_path('categories.index') or is_current_path('categories.show', {id: category.id, slug: category.slug})? 'active' : '' }}">
                    <a href="{{ path_for('categories.index') }}">Categories</a>
                </li>
                <li class="menuitem {{ is_current_path('about')? 'active' : '' }}">
                    <a href="{{ path_for('about') }}">About</a>
                </li>
                <li class="menuitem {{ is_current_path('contact')? 'active' : '' }}">
                    <a href="{{ path_for('contact') }}">Contact</a>
                </li>
            </ul>

            <a href="#" class="btn-hamburguer-menu"><i class="fa fa-bars"></i></a>
        </nav>
    </div>
</header>
