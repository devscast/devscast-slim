{% extends 'layouts/main.html.twig' %}

{% block content %}
    <section class="podcast-hero" style="background-image: url(http://127.0.0.1/photofills)">
        <div class="podcast-hero-inner">

            <div class="container">
                <div class="podcast-hero-content">
                    <span class="podcast-hero-date">December 22, 2015</span>
                    <h2 class="podcast-hero-title"><a href="podcast.html">Episode #08 - Our vacations have been so amazing!</a></h2>
                    <ul class="podcast-hero-meta">
                        <li class="item"><a href="#" class="podcast-hero-tag" rel="tag">Lifestyle</a></li>
                        <li class="item"><i class="fa fa-clock-o"></i> 45 mins.</li>
                        <li class="item"><a href="#" class="podcast-hero-download"><i class="fa fa-download"></i> Download</a></li>
                    </ul>
                </div>
            </div>

            <div class="podcast-hero-player-content">
                <div class="container">
                    <audio src="http://localhost/audio/test.mp3"></audio>
                </div>
            </div>
        </div>
    </section>

    <main id="main" class="main">
        <section id="#episodes" class="section-positive transition">
            <div class="container">
                <h2 class="title-default">Another Episodes</h2>
                {% if podcasts is defined %}
                    {% for p in podcasts %}
                        <div class="col-sm-6 mb-40">
                            <div class="podcast-card boxed">
                                <figure class="podcast-image"><a href="podcast.html"><img src="assets/img/cards/podcast-boxed-thumb4.jpg" alt="Music Show" title="Music Show" /></a></figure>
                                <div class="podcast-content">
                                    <span class="podcast-date">November 27, 2015</span>
                                    <h2 class="podcast-title"><a href="podcast.html">{{ p.name }}</a></h2>
                                    <p class="podcast-excerpt"><a href="podcast.html">This is a boxed podcast layout. Lorem ipsum dolor sit amet, consectetur adipisicing elit...</a></p>
                                    <ul class="podcast-meta">
                                        <li class="item"><a href="#" class="podcast-tag" rel="tag">Lifestyle</a></li>
                                        <li class="item"><i class="fa fa-clock-o"></i> {{ p.duration }} mins.</li>
                                        <li class="item"><a href="podcast.html" class="podcast-play"><i class="fa fa-play"></i> Play Episode</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                    <div class="col-sm-12 mb-50">
                        <a href="{{ path_for('podcasts.index') }}" class="btn btn-primary btn-block btn-lg">
                            View more episodes
                        </a>
                    </div>
                {% endif %}
            </div>

            <LoadingWidget v-if="loading"></LoadingWidget>
        </section>

        {% include 'includes/about.html.twig' %}
        {% include 'includes/newsletter.html.twig' %}
        {% include 'includes/donate.html.twig' %}
    </main>
{% endblock %}