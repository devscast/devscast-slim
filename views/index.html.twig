{% extends 'layouts/main.html.twig' %}

{% block content %}
    <section class="podcast-hero" style="background-image: url({{ hero.image }})">
        <div class="podcast-hero-inner">
            <div class="container">
                <div class="podcast-hero-content">
                    <span class="podcast-hero-date">{{ hero.created_at | date('M d, Y') }}</span>
                    <h2 class="podcast-hero-title">
                        <a href="{{ path_for('podcasts.show', {id: hero.id, slug: hero.slug}) }}">
                            {{ hero.name | truncate(30) }}
                        </a>
                    </h2>
                    <ul class="podcast-hero-meta">
                        <li class="item"><a href="#" class="podcast-hero-tag" rel="tag">{{ hero.category }}</a></li>
                        <li class="item"><i class="fa fa-clock-o"></i> {{ hero.duration }} mins.</li>
                        <li class="item"><a href="{{ hero.audio }}" class="podcast-hero-download"><i class="fa fa-download"></i> Download</a></li>
                    </ul>
                </div>
            </div>

            <div class="podcast-hero-player-content">
                <div class="container">
                    <audio src="{{ hero.audio }}"></audio>
                </div>
            </div>
        </div>
    </section>

    <main id="main" class="main">
        <section id="#episodes" class="section-positive transition">
            <div class="container">
                <h2 class="title-default">Another Episodes</h2>
                {% if podcasts is defined %}
                    <div id="podcasts-container" data-fetch="podcasts">
                        {% for p in podcasts %}
                            <div class="col-sm-6 mb-40" id="{{ p.id }}">
                                <div class="podcast-card boxed">
                                    <figure class="podcast-image">
                                        <a href="{{ path_for('podcast.show', {id: p.id, slug: p.slug}) }}">
                                            <img src="{{ p.image }}" alt="Music Show" title="Music Show" />
                                        </a>
                                    </figure>
                                    <div class="podcast-content">
                                        <span class="podcast-date">{{ p.create_at | date('M d, Y') }}</span>
                                        <h2 class="podcast-title">
                                            <a href="{{ path_for('podcast.show', {id: p.id, slug: p.slug}) }}">
                                                {{ p.name | truncate(20) }}
                                            </a>
                                        </h2>
                                        <p class="podcast-excerpt">
                                            <a href="{{ path_for('podcast.show', {id: p.id, slug: p.slug}) }}">
                                                {{ p.content | truncate(150) }}
                                            </a>
                                        </p>
                                        <ul class="podcast-meta">
                                            <li class="item"><a href="#" class="podcast-tag" rel="tag">{{ p.category }}</a></li>
                                            <li class="item"><i class="fa fa-clock-o"></i> {{ p.duration }} mins.</li>
                                            <li class="item">
                                                <a href="{{ path_for('podcast.show', {id: p.id, slug: p.slug}) }}" class="podcast-play"><i class="fa fa-play"></i> Play Episode</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <div class="col-sm-12 mb-50">
                        <a href="{{ path_for('podcasts.index') }}" class="btn btn-primary btn-block btn-lg">
                            View more episodes
                        </a>
                    </div>
                {% endif %}
            </div>
        </section>

        {% include 'includes/about.html.twig' %}
        {% include 'includes/newsletter.html.twig' %}
        {% include 'includes/donate.html.twig' %}
    </main>
{% endblock %}