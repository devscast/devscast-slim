{% extends 'layouts/dashboard.html.twig' %}
{% import 'includes/admin/forms.html.twig' as form %}

{% block breadcrumb %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Edit category</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path_for('home') }}">Home</a></li>
                        <li class="breadcrumb-item"><a href="{{ path_for('admin.index') }}">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="{{ path_for('admin.categories') }}">categories</a></li>
                        <li class="breadcrumb-item active">Edit category</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block content %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div style="padding-bottom: 15px;">
                    <a href="{{ path_for('admin.categories') }}" class="btn btn-primary">Show categories</a>
                </div>
                <div class="card card-info card-outline">
                    <div class="card-body">
                        <h3>{{ category.name | truncate(50) }}</h3>
                        <hr>
                        <form data-thumb="true" action="{{ path_for('admin.categories.update', {id: category.id}) }}" method="POST" autocomplete="off">
                            {{ _csrf() }}
                            {{ _method('PUT') }}
                            <fieldset>
                                {{ form.input('Name', 'name', errors.get('name'), input.name ?? category.name) }}
                                {{ form.input('Slug', 'slug', errors.get('slug'), input.slug ?? category.slug) }}
                            </fieldset>
                            <fieldset>
                                {{ form.wysiwyg('description', errors.description, input.description) }}
                            </fieldset>
                            <div class="row">
                                <div class="col-lg-12">
                                    <br>
                                    <button class="btn btn-primary btn-block" type="submit">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascriptPlugins %}
    <script src="{{ base_url() ~ '/assets/admin/plugins/ckeditor/ckeditor.js' }}"></script>
    <script src="{{ base_url() ~ '/assets/admin/dist/js/main.js' }}"></script>
{% endblock %}

{% block javascript %}
    <script>
        $(function () {
            ClassicEditor.create(document.querySelector('#description'))
        })
    </script>
{% endblock %}