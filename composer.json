{
  "name": "bernard-ng/devscast",
  "description": "the backend of the devscast app",
  "homepage": "https://devs-cast.com",
  "license": "APACHE-2.0",
  "authors": [
    {
      "name": "bernard-ng",
      "email": "ngandubernard@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.2.0",
    "slim/slim": "^3.1",
    "slim/php-view": "^2.0",
    "monolog/monolog": "^1.17",
    "robmorgan/phinx": "^0.10.6",
    "php-di/slim-bridge": "^2.0",
    "php-di/php-di": "^6.0",
    "awurth/slim-validation": "^3.1",
    "slim/twig-view": "^2.4",
    "nochso/html-compress-twig": "^2.0",
    "twig/extensions": "^1.5",
    "slim/csrf": "^0.8.3",
    "ext-json": "*",
    "ext-pdo": "*",
    "zendframework/zend-config-aggregator": "^1.1",
    "vlucas/phpdotenv": "^3.6"
  },
  "require-dev": {
    "fzaninotto/faker": "^1.8",
    "squizlabs/php_codesniffer": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/App/",
      "Modules\\": "src/Modules/",
      "Framework\\": "src/Framework/",
      "API\\": "src/Modules/API/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "config": {
    "process-timeout": 0
  },
  "scripts": {
    "start": "php -S 0.0.0.0:3000 -t public router.php"
  }
}
